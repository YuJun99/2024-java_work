package test.main;

import java.util.*;

public class Main{
    public static void main(String[] args){
        Scanner sc = new Scanner(System.in);
        long A = sc.nextLong();
        long result = 0;
        String answer = "";
        
        String[] str = Long.toString(A).split("");
        Arrays.sort(str, Collections.reverseOrder());
        for(String s : str){
            answer += s;
        }
            result = Long.parseLong(answer);
            
            System.out.print(result);

    }
}